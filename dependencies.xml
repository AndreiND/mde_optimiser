<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="dependencies" default="depend.all">
    <dirname property="dependencies.basedir" file="${ant.file.dependencies}"/>

    <!-- ================================================================== -->
    <target name="depend.all" depends="depend.maven, depend.eclipse">
    </target>

    <!-- Maven Dependencies Repository Builds -->

    <!-- Download CBI Aggregator CLI -->
    <target name="depend.maven.cbiaggr">
      <ant dir="${dependencies.basedir}/build/cbiaggr" inheritAll="true"/>
    </target>
    <!--
    This will download Eclipse Bundles and convert them to maven artifacts.

    These are then deployed to a cached local maven repository.

    The repository is then used by the main maven build.
   -->
    <target name="depend.maven.dependencies" depends="depend.maven.cbiaggr">
            <ant dir="${dependencies.basedir}/repositories/p2" inheritAll="true"/>
    </target>

    <!-- Maven Builds -->
    <!-- ================================================================== -->
    <target name="depend.maven" depends="depend.maven.dependencies">
            <ant dir="${dependencies.basedir}/build/maven" inheritAll="true"/>
    </target>

    <!-- Eclipse Builds -->
    <target name="depend.eclipse" depends="depend.maven">
            <ant dir="${dependencies.basedir}/interfaces/eclipse" inheritAll="true"/>
    </target>

</project>
